{
    "manifest_version": 3,
    "name": "Background Color Changer",
    "version": "1.0.0",
    "description": "A chrome extension that changes the background color of the page to a selected color",
    
    "background": {
        "service_worker": "service_worker.js",
        "type": "module"
    },

    "action": {
        "default_popup": "index.html"
    },

    "permissions": [
        "scripting"
    ],

   
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]


}